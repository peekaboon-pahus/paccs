<body>
    <header class="header">
        <a href="/" class="logo">üé¨ <span>PACCS</span></a>
        <span class="admin-badge">üîê Admin Dashboard</span>
    </header>
    
    <main class="main-content">
        <div class="page-header">
            <h1>Profile Management</h1>
            <p>AI-powered moderation with manual override</p>
        </div>
        
        <div class="ai-info">
            <div class="icon">ü§ñ</div>
            <div class="text">
                <h3>AI Moderation Active</h3>
                <p>Profiles are automatically scored and categorized. Score ‚â•80 = Auto-approved, 50-79 = Review needed, &lt;50 = Flagged for issues.</p>
            </div>
        </div>
        
        <div class="stats-row">
            <div class="stat-card auto">
                <div class="value" id="autoCount">0</div>
                <div class="label">‚úì Auto-Approved</div>
            </div>
            <div class="stat-card pending">
                <div class="value" id="pendingCount">0</div>
                <div class="label">‚è≥ Needs Review</div>
            </div>
            <div class="stat-card flagged">
                <div class="value" id="flaggedCount">0</div>
                <div class="label">üö© Flagged</div>
            </div>
            <div class="stat-card featured">
                <div class="value" id="featuredCount">0</div>
                <div class="label">‚≠ê Featured</div>
            </div>
            <div class="stat-card total">
                <div class="value" id="totalCount">0</div>
                <div class="label">üìä Total</div>
            </div>
        </div>
        
        <div class="tabs">
            <button class="tab active" onclick="filterProfiles('all')">All <span class="count" id="tabAll">0</span></button>
            <button class="tab" onclick="filterProfiles('flagged')">üö© Flagged <span class="count" id="tabFlagged">0</span></button>
            <button class="tab" onclick="filterProfiles('pending_review')">‚è≥ Needs Review <span class="count" id="tabPending">0</span></button>
            <button class="tab" onclick="filterProfiles('auto_approved')">‚úì Auto-Approved <span class="count" id="tabAuto">0</span></button>
            <button class="tab" onclick="filterProfiles('featured')">‚≠ê Featured <span class="count" id="tabFeatured">0</span></button>
        </div>
        
        <div id="profilesContainer" class="profiles-list">
            <div class="loading">Loading profiles...</div>
        </div>
    </main>
    
    <div class="toast" id="toast"></div>
    
    <script>
        let allProfiles = [];
        let currentFilter = 'all';
        
        async function loadProfiles() {
            try {
                const response = await fetch('/api/admin/profiles');
                const data = await response.json();
                
                if (data.success) {
                    allProfiles = data.profiles;
                    updateStats();
                    renderProfiles(allProfiles);
                }
            } catch (error) {
                console.error('Error:', error);
                document.getElementById('profilesContainer').innerHTML = `
                    <div class="empty-state">
                        <div class="icon">‚ö†Ô∏è</div>
                        <p>Error loading profiles</p>
                    </div>
                `;
            }
        }
        
        function updateStats() {
            const auto = allProfiles.filter(p => p.status === 'auto_approved').length;
            const pending = allProfiles.filter(p => p.status === 'pending_review').length;
            const flagged = allProfiles.filter(p => p.status === 'flagged').length;
            const featured = allProfiles.filter(p => p.featured).length;
            
            document.getElementById('autoCount').textContent = auto;
            document.getElementById('pendingCount').textContent = pending;
            document.getElementById('flaggedCount').textContent = flagged;
            document.getElementById('featuredCount').textContent = featured;
            document.getElementById('totalCount').textContent = allProfiles.length;
            
            document.getElementById('tabAll').textContent = allProfiles.length;
            document.getElementById('tabFlagged').textContent = flagged;
            document.getElementById('tabPending').textContent = pending;
            document.getElementById('tabAuto').textContent = auto;
            document.getElementById('tabFeatured').textContent = featured;
        }
        
        function filterProfiles(filter) {
            currentFilter = filter;
            
            document.querySelectorAll('.tab').forEach(t => t.classList.remove('active'));
            event.target.closest('.tab').classList.add('active');
            
            let filtered = allProfiles;
            if (filter === 'flagged') {
                filtered = allProfiles.filter(p => p.status === 'flagged');
            } else if (filter === 'pending_review') {
                filtered = allProfiles.filter(p => p.status === 'pending_review');
            } else if (filter === 'auto_approved') {
                filtered = allProfiles.filter(p => p.status === 'auto_approved');
            } else if (filter === 'featured') {
                filtered = allProfiles.filter(p => p.featured);
            }
            
            renderProfiles(filtered);
        }
        
        function getScoreClass(score) {
            if (score >= 80) return 'high';
            if (score >= 50) return 'medium';
            return 'low';
        }
        
        function getStatusLabel(status) {
            const labels = {
                'auto_approved': '‚úì Auto-Approved',
                'pending_review': '‚è≥ Needs Review',
                'flagged': 'üö© Flagged',
                'approved': '‚úì Approved',
                'rejected': '‚úó Rejected'
            };
            return labels[status] || status;
        }
        
        function renderProfiles(profiles) {
            const container = document.getElementById('profilesContainer');
            
            if (profiles.length === 0) {
                container.innerHTML = `
                    <div class="empty-state">
                        <div class="icon">üì≠</div>
                        <p>No profiles in this category</p>
                    </div>
                `;
                return;
            }
            
            container.innerHTML = profiles.map(profile => `
                <div class="profile-card ${profile.status === 'flagged' ? 'flagged' : ''}">
                    <div class="profile-main">
                        <div class="profile-avatar">${profile.fullName ? profile.fullName[0] : '?'}</div>
                        <div class="profile-info">
                            <div class="profile-name">
                                ${profile.featured ? '<span class="featured-star">‚≠ê</span>' : ''}
                                ${profile.fullName}
                            </div>
                            <div class="profile-meta">
                                ${profile.designation || 'Filmmaker'} ‚Ä¢ ${profile.email}
                                <span class="date-text">‚Ä¢ Joined ${formatDate(profile.created_at)}</span>
                            </div>
                        </div>
                        <div class="profile-badges">
                            <span class="ai-score ${getScoreClass(profile.moderation_score || 0)}">
                                ü§ñ AI Score: ${profile.moderation_score || 0}%
                            </span>
                            <span class="status-badge ${profile.status}">
                                ${getStatusLabel(profile.status)}
                            </span>
                        </div>
                        <div class="profile-actions">
                            <button class="btn btn-view" onclick="viewProfile('${profile.id}')">View</button>
                            ${profile.status !== 'approved' && profile.status !== 'auto_approved' ? `
                                <button class="btn btn-approve" onclick="approveProfile('${profile.id}')">Approve</button>
                            ` : ''}
                            ${!profile.featured ? `
                                <button class="btn btn-feature" onclick="featureProfile('${profile.id}')">Feature</button>
                            ` : ''}
                            ${profile.status !== 'rejected' ? `
                                <button class="btn btn-reject" onclick="rejectProfile('${profile.id}')">Reject</button>
                            ` : ''}
                        </div>
                    </div>
                    ${profile.moderation_flags && profile.moderation_flags.length > 0 ? `
                        <div class="flags-section">
                            <div class="flags-title">üö© AI Detected Issues:</div>
                            <div class="flags-list">
                                ${profile.moderation_flags.map(flag => `
                                    <span class="flag-item">‚ö†Ô∏è ${formatFlag(flag)}</span>
                                `).join('')}
                            </div>
                            ${profile.moderation_reasons && profile.moderation_reasons.length > 0 ? `
                                <ul class="reasons-list">
                                    ${profile.moderation_reasons.map(reason => `
                                        <li>${reason}</li>
                                    `).join('')}
                                </ul>
                            ` : ''}
                        </div>
                    ` : ''}
                </div>
            `).join('');
        }
        
        function formatFlag(flag) {
            const labels = {
                'offensive_language': 'Offensive Language',
                'spam_detected': 'Spam Detected',
                'low_quality_bio': 'Low Quality Bio',
                'short_bio': 'Short Bio',
                'suspicious_name': 'Suspicious Name',
                'invalid_name': 'Invalid Name',
                'all_caps_name': 'All Caps Name',
                'suspicious_links': 'Suspicious Links',
                'invalid_url_format': 'Invalid URL Format',
                'placeholder_content': 'Placeholder Content'
            };
            return labels[flag] || flag;
        }
        
        function formatDate(dateStr) {
            if (!dateStr) return '-';
            const date = new Date(dateStr);
            return date.toLocaleDateString('en-GB', { day: 'numeric', month: 'short', year: 'numeric' });
        }
        
        function viewProfile(id) {
            window.open(`/filmmaker/${id}`, '_blank');
        }
        
        async function approveProfile(id) {
            try {
                const response = await fetch(`/api/admin/profile/${id}/approve`, { method: 'POST' });
                const data = await response.json();
                
                if (data.success) {
                    showToast('Profile approved! ‚úì', 'success');
                    loadProfiles();
                } else {
                    showToast('Error approving profile', 'error');
                }
            } catch (error) {
                showToast('Error approving profile', 'error');
            }
        }
        
        async function rejectProfile(id) {
            if (!confirm('Are you sure you want to reject this profile?')) return;
            
            try {
                const response = await fetch(`/api/admin/profile/${id}/reject`, { method: 'POST' });
                const data = await response.json();
                
                if (data.success) {
                    showToast('Profile rejected', 'success');
                    loadProfiles();
                } else {
                    showToast('Error rejecting profile', 'error');
                }
            } catch (error) {
                showToast('Error rejecting profile', 'error');
            }
        }
        
        async function featureProfile(id) {
            try {
                const response = await fetch(`/api/admin/profile/${id}/feature`, { method: 'POST' });
                const data = await response.json();
                
                if (data.success) {
                    showToast('Profile featured! ‚≠ê', 'success');
                    loadProfiles();
                } else {
                    showToast('Error featuring profile', 'error');
                }
            } catch (error) {
                showToast('Error featuring profile', 'error');
            }
        }
        
        function showToast(message, type) {
            const toast = document.getElementById('toast');
            toast.textContent = message;
            toast.className = `toast ${type}`;
            toast.style.display = 'block';
            
            setTimeout(() => {
                toast.style.display = 'none';
            }, 3000);
        }
        
        loadProfiles();
    </script>
</body>
</html>